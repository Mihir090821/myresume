<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Resume - <%= resume.name %></title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <div class="resume">
    <header class="header">
      <div class="profile">
        <img src="https://ntce.co.in/Admin/assets//uploads/1710181458avatar-1.jpg" alt="<%= resume.name %>" class="profile-img">
        <h1><%= resume.name %></h1>
        <h2><%= resume.title %></h2>
        <p><%= resume.tagline %></p>
      </div>
      <div class="contact">
        <p>Email: <a href="mailto:<%= resume.contact.email %>"><%= resume.contact.email %></a></p>
        <p>Phone: <%= resume.contact.phone %></p>
        <p>Location: <%= resume.contact.location %></p>
        <p>Portfolio: <a href="<%= resume.contact.portfolio %>" target="_blank"><%= resume.contact.portfolio %></a></p>
        <p>GitHub: <a href="<%= resume.contact.github %>" target="_blank"><%= resume.contact.github %></a></p>
      </div>
    </header>

    <section>
      <h2>Education</h2>
      <% resume.education.forEach(edu => { %>
        <div>
          <h3><%= edu.degree %></h3>
          <p><%= edu.institution %> - <%= edu.location %></p>
          <% if (edu.dates) { %><p><%= edu.dates %></p><% } %>
          <% if (edu.projects) { %>
            <ul>
              <% edu.projects.forEach(project => { %>
                <li><%= project %></li>
              <% }); %>
            </ul>
          <% } %>
        </div>
      <% }); %>
    </section>

    <section>
      <h2>Skills</h2>
      <p><%= resume.skills.join(", ") %></p>
    </section>

    <section>
      <h2>Internships</h2>
      <% resume.internships.forEach(internship => { %>
        <div>
          <h3><%= internship.role %></h3>
          <p><%= internship.company %> (<%= internship.dates %>)</p>
          <p><%= internship.contact %></p>
        </div>
      <% }); %>
    </section>

    <section>
      <h2>Personal Projects</h2>
      <ul>
        <% resume.projects.forEach(project => { %>
          <li>
            <strong><%= project.title %>:</strong> <%= project.description %>
            <% if (project.dates) { %> (<%= project.dates %>)<% } %>
          </li>
        <% }); %>
      </ul>
    </section>

    <section>
      <h2>Languages</h2>
      <p><%= resume.languages.join(", ") %></p>
    </section>
  </div>
</body>
</html>
